@page
@model WahoClient.Pages.FogotModel
@{
}
<div class="row d-flex">
    <div class="col-md-4 mx-auto form-container login-container">
        <div class="pb-4 px-3">
            <div class="d-flex mt-4">
                <h1 class="mx-auto d-flex align-items-center">
                    <img src="~/img/wahologo.png" width="50px" height="50px" />Wa<span class="primary-color">Ho</span>
                </h1>
            </div>
            <h4>Quên mật khẩu</h4>
            <hr />
            <form method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="form-group">
                    <label class="control-label">Tài khoản email</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-envelope-fill"></i></span>
                        <input type="text" asp-for="email" class="form-control" placeholder="Nhập tài khoản email của bạn">
                    </div>
                </div>
                <div class="form-group mb-3 d-flex justify-content-between">
                    <a asp-page="/Index">Đăng nhập</a>
                </div>
                @if (Model.message != null)
                {
                    <div class="text-success"><h5>@Model.message</h5></div>
                }
                @if (Model.Errmessage != null)
                {
                    <div class="text-danger"><h5>@Model.Errmessage</h5></div>
                }
                <div class="form-group text-center mt-5">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-box-arrow-in-right"></i> Gửi mail </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}