    <script>

        $(document).ready(function () {
            setTimeout(function () {
                $("#success-alert").fadeOut("slow", function () {
                    $(this).remove();
                });
                $("#error-alert").fadeOut("slow", function () {
                    $(this).remove();
                });
            }, 3000); // thời gian để tự động ẩn thông báo (tính bằng mili giây)

            $('#input-search-customer').keypress(function (event) {
                var keycode = (event.keyCode ? event.keyCode : event.which);
                if (keycode == '13') {
                    event.preventDefault();
                    // Thực hiện các hành động cần thiết khi người dùng nhấn phím Enter
                }
            });

            var delayTimer;
            $('#input-search-customer').on('input', function () {
                clearTimeout(delayTimer);
                delayTimer = setTimeout(function () {
                    $('#customerListForm').submit()
                }, 500); // Thời gian chờ tính bằng mili giây
            });

        });

        function validateForSubmit() {
            const dateFrom = $('#dateFrom').val();
            const dateTo = $('#dateTo').val();


            // Kiểm tra xem giá trị ngày đã nhập đủ 4 số cho phần năm hay chưa
            if (!(dateFrom.length === 10 && dateFrom.charAt(4) === '-' && dateFrom.charAt(7) === '-')) {
                $("#dateValid").html(`Chưa nhập đủ ngày bắt đầu!`)
            } else if (!(dateTo.length === 10 && dateTo.charAt(4) === '-' && dateTo.charAt(7) === '-')) {
                $("#dateValid").html(`Chưa nhập đủ ngày kết thúc!`)
            }
            else if (Date.parse(dateFrom) > Date.parse(dateTo)) {
                $("#dateValid").html(`Ngày bắt đầu lớn hơn ngày kết thúc!`)
            }
            else {
                $('#customerListForm').submit()
            }
        }

        function clearForSubmit() {
            $('#dateFrom').val("");
            $('#dateTo').val("");
            $('#customerListForm').submit()
        }

        function getCustomerDetail(id) {
            $.ajax({
                url: "https://localhost:7019/waho/Customer/detail?id=" + id,
                type: "GET",
                headers: {
                    //thêm header chứa token
                    "Authorization": "@token"
                },
                success: function (data) {
                    // Gán dữ liệu vào các trường của form
                    $("#edit-id").val(id)
                    $("#edit-name").val(data.customerName);
                    $("#edit-phone").val(data.phone);
                    $("#edit-dob").val(formatDate(data.dob));
                    $("#edit-address").val(data.adress);
                    $(`#edit-type option[value='${data.typeOfCustomer}']`).attr('selected', 'selected');
                    $("#edit-tax").val(data.taxCode);
                    $("#edit-email").val(data.email);
                    $("#edit-note").val(data.description);
                    $(`#edit-active option[value='${data.active}']`).attr('selected', 'selected');

                    modal('update-modal', 1, 'scale(1)')
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                },
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded; charset=UTF-8');
                }
            });
        }

        //format date
        function formatDate(date) {
            var d = new Date(date),
                month = '' + (d.getMonth() + 1),
                day = '' + d.getDate(),
                year = d.getFullYear();

            if (month.length < 2)
                month = '0' + month;
            if (day.length < 2)
                day = '0' + day;

            return [year, month, day].join('-');
        }

        function deleteCustomer(id, name, phone, email, taxcode) {
            renderConfirmationModal(id, name, phone, email, taxcode)
            $('#modal-confirmation').css('display', 'flex')
        }

        function renderConfirmationModal(id, name, phone, email, taxcode) {
            $('#modal-confirmation').html(`
                                            <div class="modal-dialog ">
                                                <div class="modal-content modal-content-confirmation">
                                                    <div class=" modal-header p-1">
                                                        <h6 class="modal-title ms-3">
                                                            <i class="bi bi-exclamation-triangle-fill modal-confirm-content-title"></i>
                                                            Xác nhận muốn xoá?
                                                        </h6>
                                                         <h5 class="toast__close mb-0" onclick="closeModalConfirmation()">
                                                             <i class="bi bi-x-lg"></i>
                                                         </h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h6>Thông tin khách hàng:</h6>
                                                        <p>Mã khách hàng: ${id}</p>
                                                        <p>Tên khách hàng: ${name}</p>
                                                        <p>Số điện thoại: ${phone}</p>
                                                        <p>Email: ${email}</p>
                                                        <p>Mã thuế: ${taxcode}</p>
                                                    </div>
                                                    <div class="modal-footer p-1">
                                                        <button type="button" class="btn btn-primary" onclick="handleDelete('${id}')">Xác nhận</button>
                                                        <button type="button" onclick=" closeModalConfirmation()" class="btn btn-outline-primary"
                                                            data-bs-dismiss="modal">Đóng</button>
                                                    </div>
                                                </div>
                                            </div>`)
        }

        function handleDelete(id) {
            closeModalConfirmation()
            window.location.href = "Customers/Delete?id=" + id;
        }

        function closeModalConfirmation() {
            $('#modal-confirmation').css('display', 'none')
        }

    </script>

