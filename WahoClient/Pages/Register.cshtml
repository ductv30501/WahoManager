@page
@model WahoClient.Pages.RegisterModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Waho</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Waho.styles.css" asp-append-version="true" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/modal.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<div class="row d-flex ">
    <div class="mx-auto form-container col-md-5 reg-container position-relative">
        <div class="pb-4 px-3">
            <div class="d-flex mt-4">
                <h1 class="mx-auto d-flex align-items-center">
                    <img src="~/img/wahologo.png" width="50px" height="50px" />Wa<span class="primary-color">Ho</span>
                </h1>
            </div>
            <h4 class="">Đăng ký </h4>
            @if (TempData["message"] != null)
            {
                <div id="error-alert" class="d-flex justify-content-end position-absolute toast-mess">
                    <div class="alert alert-danger text-center"><h5>@TempData["message"]</h5></div>
                </div>
            }
            @if (TempData["successMessage"] != null)
            {
                <div id="success-alert" class="d-flex justify-content-end position-absolute toast-mess">
                    <div class="alert alert-success text-center"><h5>@TempData["successMessage"]</h5></div>
                </div>
            }
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex mb-3 justify-content-between">
                    <div class="form-group flex-md-grow-1 me-3">
                        <label class="control-label">Tên nhân viên</label>
                        <div class="input-group">
                            <span class="input-group-text span-input-primary"><i class="bi bi-people-fill"></i></span>
                            <input type="text" asp-for="Employee.EmployeeName" id="eNameInput" class="form-control" placeholder="Nhập tên người dùng">
                            <input type="hidden" asp-for="Employee.Active" value="false" class="form-control" placeholder="Nhập tên người dùng">
                        </div>
                        <span asp-validation-for="Employee.EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="form-group flex-md-grow-1" style="margin-right:20px;">
                        <label class="control-label">Chức vụ</label>
                        <div class="input-group">
                            <span class="input-group-text span-input-primary"><i class="bi bi-briefcase"></i></span>
                            <input type="text" asp-for="Employee.Title" id="eEmailInput" class="form-control" placeholder="Nhập chức vụ">
                        </div>
                    </div>
                    <div class="form-group flex-md-grow-1 me-3">
                        <label class="control-label">Nhà kho</label>
                        <div class="input-group">
                            <span class="input-group-text span-input-primary"><i class="bi bi-briefcase"></i></span>
                            <select asp-for="Employee.WahoId" class="form-select">
                                @foreach(var w in Model.wahos){
                                    <option value="@(w.WahoId)" >@w.WahoName </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex mb-3 justify-content-between">
                    <div class="form-group flex-md-grow-1 me-3">
                        <label class="control-label">Số điện thoại</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text span-input-primary"><i class="bi bi-telephone-fill"></i></span>
                            <input type="text" asp-for="Employee.Phone" id="ePhoneInput" class="form-control" placeholder="Nhập số điện thoại">
                        </div>
                    </div>

                    <div class="form-group flex-md-grow-1">
                        <label asp-for="Employee.Email" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text span-input-primary"><i class="bi bi-envelope-fill"></i></span>
                            <input type="email" asp-for="Employee.Email" id="eEmailInput" class="form-control" placeholder="Nhập email">
                        </div>
                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex mb-3 justify-content-between">
                    <div class="form-group flex-md-grow-1 me-3">
                        <label class="control-label">Ngày sinh</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text span-input-primary"><i class="bi bi-calendar-date"></i></span>
                            <input type="date" asp-for="Employee.Dob" id="ePhoneInput" class="form-control" placeholder="Nhập số điện thoại">
                        </div>
                    </div>
                    <div class="form-group flex-md-grow-1" style="margin-right:20px;">
                        <label class="control-label">Địa chỉ</label>
                        <div class="input-group">
                            <span class="input-group-text span-input-primary"><i class="bi bi-building-fill"></i></span>
                            <input type="text" asp-for="Employee.Address" id="eAddressInput" class="form-control" placeholder="Nhập địa chỉ nhân viên">
                        </div>
                    </div>
                    <div class="form-group flex-md-grow-1 me-3">
                        <label class="control-label">Phân quyền</label>
                        <div class="input-group">
                            <span class="input-group-text span-input-primary"><i class="bi bi-briefcase"></i></span>
                            <select asp-for="Employee.Role" id="eAddressInput" class="form-select">
                                <option value="1">Admin</option>
                                <option value="2">Thu Ngân</option>
                                <option value="3">Quản lý kho</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex mb-3 justify-content-between">
                    <div class="form-group flex-md-grow-1 me-3">
                        <label class="control-label">Tài khoản</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text span-input-primary"><i class="bi bi-people-fill"></i></span>
                            <input type="text" asp-for="Employee.UserName" id="eUserNameInput" class="form-control" placeholder="Nhập tên đăng nhập">
                        </div>
                        <span asp-validation-for="Employee.UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group flex-md-grow-1">
                        <label class="control-label">Mật khẩu</label>
                        <div class="input-group" style="position:relative">
                            <span class="input-group-text span-input-primary"><i class="bi bi-key-fill"></i></span>
                            <input type="password" asp-for="Employee.Password" id="EpassInput" class="form-control" placeholder="Nhập mật khẩu">
                            <div id="ePassInput" class="eyebutton input-group-text " onclick="showPassword()">
                                <i class="bi bi-eye-slash-fill eye-icon"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Employee.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-center">
                    <a asp-page="./Index" class="btn btn-outline-primary me-2"><i class="bi bi-arrow-return-left"></i> Trở lại</a>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-right"></i> Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script>
    function showPassword(){
        var passwordType = $('#EpassInput').attr('type');
        if (passwordType == 'password') {
            $('#ePassInput').html('');
            $('#ePassInput').html('<i class="bi bi-eye-fill"></i>');
            $('#EpassInput').attr('type', 'text');
        } else {
            $('#ePassInput').html('');
            $('#ePassInput').html(`<i class="bi bi-eye-slash-fill eye-icon"></i>`);
            $('#EpassInput').attr('type', 'password');
        }
    }

    var delayTimer;

    $(document).ready(function () {
        setTimeout(function () {
            $("#success-alert").fadeOut("slow", function () {
                $(this).remove();
            });
            $("#error-alert").fadeOut("slow", function () {
                $(this).remove();
            });
        }, 3000); // thời gian để tự động ẩn thông báo (tính bằng mili giây)

    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}