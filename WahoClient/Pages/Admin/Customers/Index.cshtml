    <div class="mt-4">
        <form id="customerListForm" method="get" asp-page="./Index" style="margin-bottom: 20px; ">
            <div class="d-flex">
                <h3 class="col-2 me-4">Khách hàng</h3>
                <div class="d-flex justify-content-between flex-grow-1">
                    <div class="form-group me-4 col-6">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="input-search-customer" asp-for="@Model.textSearch" placeholder="Nhập tên khách hàng, số điện thoại, email, mã thuế" aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <button class="input-group-text span-input-primary" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </div>
                    <div class="form-group me-4">
                        <a class="btn btn-primary" onclick="modal('insert-modal', 0, 'scale(1)');">
                            <i class="bi bi-person-plus-fill"></i> Thêm khách hàng
                        </a>
                    </div>
                </div>
            </div>

            @*end filter*@
            @if (TempData["ErrorMessage"] != null)
            {
                <div id="error-alert" class="d-flex justify-content-end">
                    <div class="alert alert-danger text-center"><h5>@TempData["SuccessMessage"]</h5></div>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="d-flex justify-content-end">
                    <div class="alert alert-success text-center"><h5>@TempData["SuccessMessage"]</h5></div>
                </div>
            }

            <div class="d-flex">
                <div class="d-flex flex-column col-2 me-4">
                    <div class="form-group col-6 mx-auto mb-3">
                        <select id="option-primary" class="form-select" asp-for="@Model.pageSize" onchange="this.form.submit()">
                            <option value="5"> 5 hàng</option>
                            <option value="10">10 hàng</option>
                            <option value="15">15 hàng</option>
                            <option value="20">20 hàng</option>
                        </select>
                    </div>
                    <div class="row form-container py-4 mb-3">
                        <div class="m-auto">
                            <div>
                                <h6>Sinh nhật</h6>
                                <hr />
                            </div>
                            <div class="form-group">
                                <span id="dateValid" class="text-danger"></span>
                                <span id="dateValid" class="text-danger"></span>
                                <label class="control-label">Từ</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-calendar-minus-fill"></i></span>
                                    <input asp-for="@Model.dateFrom" type="date" class="form-control" id="dateFrom">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Đến</label>
                                <div class="input-group">
                                    <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-calendar-plus-fill"></i></span>
                                    <input asp-for="@Model.dateTo" type="date" class="form-control" id="dateTo">
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button class="btn btn-primary" type="button" onclick="validateForSubmit();">Lọc</button>
                                <button class="btn btn-outline-primary" type="button" onclick="clearForSubmit();">Xoá</button>
                            </div>
                        </div>
                    </div>
                    <div class="row form-container py-4 mb-3">
                        <div class="m-auto">
                            <div>
                                <h6>Phân loại</h6>
                                <hr />
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.typeCustomer" asp-checked="@Model.typeCustomer=='all'" type="radio" value="all" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Tất cả
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.typeCustomer" asp-checked="@Model.typeCustomer=='false'" type="radio" value="false">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Cá nhân
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.typeCustomer" asp-checked="@Model.typeCustomer=='true'" type="radio" value="true">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Công ty
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row form-container py-4">
                        <div class="m-auto">
                            <div>
                                <h6>Trạng thái</h6>
                                <hr />
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.status" asp-checked="@Model.status=='all'" type="radio" value="all" id="CheckDefault">
                                <label class="form-check-label" for="CheckDefault">
                                    Tất cả
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.status" asp-checked="@Model.status=='true'" type="radio" value="true">
                                <label class="form-check-label" for="CheckDefault">
                                    Chưa xoá
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" onclick="this.form.submit()" asp-for="@Model.status" asp-checked="@Model.status=='false'" type="radio" value="false">
                                <label class="form-check-label" for="CheckDefault">
                                    Đã xoá
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.TotalCount > 0)
                {
                    <div class="flex-grow-1 form-container px-3">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="tbProductName">
                                        Tên khách hàng
                                    </th>
                                    <th class="tbImportPrice">
                                        Ngày sinh
                                    </th>
                                    <th class="tbImportPrice">
                                        Điện thoại
                                    </th>
                                    <th class="tbImportPrice">
                                        Phân loại
                                    </th>
                                    <th class="tbImportPrice">
                                        Email
                                    </th>
                                    <th class="tbImportPrice">
                                        Mã thuế
                                    </th>
                                    <th class="tbImportPrice">
                                        Trạng thái
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Customers)
                                {
                                    <tr>
                                        <td class="tbProductName">
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td class="dob-format">
                                            @{
                                                DateTime date = new DateTime();
                                                if (item.Dob != null)
                                                {
                                                    date = (DateTime)item.Dob;
                                                }
                                                @date.ToString("dd/MM/yyyy");
                                            }
                                        </td>
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td class="tbImportPrice">
                                            @(item.TypeOfCustomer == true ? "Công ty" : "Cá nhân")
                                        </td>
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="tbImportPrice">
                                            @Html.DisplayFor(modelItem => item.TaxCode)
                                        </td>
                                        <td class="tbImportPrice @(item.Active == true ? "text-success" : "text-danger")">
                                            @(item.Active == true ? "Chưa xoá" : "Đã xoá")
                                        </td>
                                        <td class="d-flex align-items-center justify-content-between">
                                            <a onclick="getCustomerDetail(@(item.CustomerId))">
                                                <i class="bi bi-pencil-square icon-table icon-edit"></i>
                                            </a>
                                            <h6 class="m-0 vertical">|</h6>
                                            <a onclick="deleteCustomer('@item.CustomerId','@item.CustomerName','@item.Phone','@item.Email','@item.TaxCode')">
                                                <i class="bi bi-trash3-fill icon-table icon-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex mt-5">
                            <div class="pagination m-auto">
                                <ul class="pagination">
                                    @if (Model.pageIndex > 1)
                                    {
                                        <li class="page-item"><a class="page-link link-paging" asp-page="./Index" asp-route-pageIndex="@(Model.pageIndex - 1)" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" asp-route-dateFrom="@Model.dateFrom" asp-route-dateTo="@Model.dateTo" asp-route-typeCustomer="@Model.typeCustomer" asp-route-status="@Model.status">Trước</a></li>
                                    }
                                    @for (int i = 1; i <= Math.Ceiling(Model.TotalCount / (double)Model.pageSize); i++)
                                    {
                                        <li class="page-item @(Model.pageIndex == i ? "active" : "") link-active"><a class="page-link link-paging" asp-page="./Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" asp-route-dateFrom="@Model.dateFrom" asp-route-dateTo="@Model.dateTo" asp-route-typeCustomer="@Model.typeCustomer" asp-route-status="@Model.status">@i</a></li>
                                    }
                                    @if (Model.pageIndex < Math.Ceiling(Model.TotalCount / (double)Model.pageSize))
                                    {
                                        <li class="page-item"><a class="page-link link-paging" asp-page="./Index" asp-route-pageIndex="@(Model.pageIndex + 1)" asp-route-pageSize="@Model.pageSize" asp-route-textSearch="@Model.textSearch" asp-route-dateFrom="@Model.dateFrom" asp-route-dateTo="@Model.dateTo" asp-route-typeCustomer="@Model.typeCustomer" asp-route-status="@Model.status">Sau</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="flex-grow-1 d-flex align-items-center form-container">
                        <h5 class="m-auto">Không có khách hàng nào phù hợp</h5>
                    </div>
                }
            </div>
        </form>
    </div>
