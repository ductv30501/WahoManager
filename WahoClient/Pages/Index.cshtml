@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Waho</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WahoClient.styles.css" asp-append-version="true" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/modal.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<div class="row d-flex">
    <div class="col-md-4 mx-auto form-container login-container">
        <div class="pb-4 px-3">
            <div class="d-flex mt-4">
                <h1 class="mx-auto d-flex align-items-center">
                    <img src="~/img/wahologo.png" width="50px" height="50px" />Wa<span class="primary-color">Ho</span>
                </h1>
            </div>
            <h4>Đăng nhập</h4>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Tài khoản</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-people-fill"></i></span>
                        <input type="text" asp-for="Employee.UserName" class="form-control" placeholder="Nhập tên đăng nhập">
                    </div>
                    <span asp-validation-for="Employee.UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Mật khẩu</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text span-input-primary" id="basic-addon1"><i class="bi bi-key-fill"></i></span>
                        <input type="password" asp-for="Employee.Password" id="EpassInput" class="form-control" placeholder="Nhập mật khẩu">
                        <div id="ePassInput" class="eyebutton input-group-text " onclick="showPassword()">
                            <i class="bi bi-eye-slash-fill eye-icon"></i>
                        </div>
                    </div>
                    <span asp-validation-for="Employee.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 d-flex justify-content-between">
                    <div class="">
                        <a asp-page="./Fogot">Quên mật khẩu?</a> <br/>
                        <a asp-page="./RegisterWaho">Đăng ký kho hàng mới?</a>
                    </div>
                    <a asp-page="./Register">Chưa có tài khoản?</a>
                    
                </div>
                <div class="form-group text-center mt-5">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-box-arrow-in-right"></i> Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function showPassword() {
        var passwordType = $('#EpassInput').attr('type');
        if (passwordType === 'password') {
            $('#ePassInput').html('');
            $('#ePassInput').html('<i class="bi bi-eye-fill"></i>');
            $('#EpassInput').attr('type', 'text');
        } else {
            $('#ePassInput').html('');
            $('#ePassInput').html(`<i class="bi bi-eye-slash-fill eye-icon"></i>`);
            $('#EpassInput').attr('type', 'password');
        }
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
